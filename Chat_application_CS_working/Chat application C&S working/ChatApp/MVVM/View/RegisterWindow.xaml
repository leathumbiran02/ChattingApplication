<Window
    x:Class="ChatApp.RegisterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChatApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RegisterWindow"
    Width="814"
    Height="470"
    Background="#00ADB5"
    FontSize="18"
    mc:Ignorable="d">
    <Border
        Margin="80,10"
        Background="#222831"
        CornerRadius="30">
        <StackPanel Margin="60,0">
            <Label
                HorizontalAlignment="Center"
                Content="Register"
                FontSize="40"
                Foreground="#EEEEEE" />
            <Separator Background="#EEEEEE" />
            <Label
                Margin="30,0"
                Content="Full Name"
                Foreground="#EEEEEE" />
            <!--  Full Name:  -->
            <TextBox
                x:Name="full_name_txt"
                Margin="30,0"
                Background="#393E46"
                FontSize="18"
                Foreground="#EEEEEE" />
            <Label
                Margin="30,0"
                Content="Email Address"
                Foreground="#EEEEEE" />
            <!--  Email Address:  -->
            <TextBox
                Name="email_address_txt"
                Margin="30,0"
                Background="#393E46"
                FontSize="18"
                Foreground="#EEEEEE" />
            <Label
                Margin="30,0"
                Content="Username"
                Foreground="#EEEEEE" />
            <!--  Username:  -->
            <TextBox
                x:Name="username_txt"
                Margin="30,0"
                Background="#393E46"
                FontSize="18"
                Foreground="#EEEEEE" />
            <Label
                Margin="30,0"
                Content="Password"
                Foreground="#EEEEEE" />
            <!--  Password:  -->
            <PasswordBox
                Name="password_txt"
                Margin="30,0"
                Background="#393E46"
                FontSize="18"
                Foreground="#EEEEEE" />
            <Button
                Name="submit_btn"
                Margin="200,15"
                Background="#00ADB5"
                Click="submit_btn_click"
                Content="Submit"
                FontSize="18"
                Foreground="#EEEEEE" />
            <!--  Submit Button:  -->
            <Button
                HorizontalAlignment="Center"
                Background="#222831"
                Click="go_to_login"
                Foreground="#EEEEEE">
                Already have an account? Click here
            </Button>
        </StackPanel>
    </Border>
</Window>
